<div class="container">
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "erro") %> impediram este estoque de ser salvo:</h2>
      <ul>
        <% @stock.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= link_to 'Voltar para o início', root_path, class: 'btn btn-secondary btn-full' %>

  <%= form_for @stock, url: stocks_path, class: 'stock-form' do |f| %>
    <div class="form-group">
      <%= f.label :name, "Nome", class: "form-label" %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Digite o nome do estoque" %>
    </div>

    <div class="form-group">
      <%= f.label :amount, "Quantidade", class: "form-label" %>
      <%= f.number_field :amount, class: 'form-control', placeholder: "Digite a quantidade" %>
    </div>

    <div class="form-group">
      <%= f.label :price, "Preço (R$)", class: "form-label" %>
      <%= f.number_field :price, step: 0.01, class: 'form-control', placeholder: "Exemplo: 10.50" %>
    </div>

    <div class="form-group">
      <%= f.label :barcode, "Código de barras", class: "form-label" %>
      <%= f.text_field :barcode, class: 'form-control', placeholder: "Gerado automaticamente se vazio" %>
    </div>

    <div class="form-group checkbox-group">
      <%= f.check_box :is_salgado, class: 'form-check-input' %>
      <%= f.label :is_salgado, "O produto que você está adicionando agora é um salgado?", class: 'form-check-label' %>
    </div>

    <div class="form-group">
      <%= f.submit "Criar Estoque", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<style>
  body {
    font-family: 'Roboto', sans-serif;
    background: linear-gradient(to bottom, #380447, #000000);
    margin: 0;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    color: white;
  }

  .container {
    background-color: rgba(255, 255, 255, 0.05);
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
    width: 400px;
    backdrop-filter: blur(5px);
  }

  #error_explanation {
    background-color: #5e0000;
    color: #ffdddd;
    border: 1px solid #ff9999;
    padding: 15px;
    margin-bottom: 20px;
    border-radius: 8px;
  }

  #error_explanation h2 {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  #error_explanation ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  #error_explanation li {
    font-size: 14px;
    margin: 5px 0;
  }

  .form-group {
    margin-bottom: 20px;
    text-align: left;
  }

  .form-label {
    font-weight: bold;
    font-size: 14px;
    margin-bottom: 5px;
    display: block;
    color: white;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    margin-top: 5px;
    background-color: #000000;
    color: white;
    border: 1px solid #888;
    border-radius: 8px;
    font-size: 14px;
    transition: border-color 0.3s;
    box-sizing: border-box;
  }

  .form-control::placeholder {
    color: #bbbbbb;
  }

  .form-control:focus {
    border-color: #80bdff;
    outline: none;
    box-shadow: 0 0 5px rgba(128, 189, 255, 0.5);
  }

  .checkbox-group {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .form-check-input {
    margin: 0;
    width: 18px;
    height: 18px;
  }

  .form-check-label {
    font-size: 14px;
    color: white;
  }

  .btn {
    display: inline-block;
    padding: 10px 20px;
    margin: 10px 0;
    border: none;
    border-radius: 8px;
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    font-size: 14px;
    width: 100%;
    font-weight: bold;
  }

  .btn-full {
    display: block;
    width: 80%;
    margin: 0 auto 20px auto;
  }

  .btn-primary {
    background-color: #3399ff;
    color: white;
    transition: background-color 0.3s ease, transform 0.2s;
  }

  .btn-primary:hover {
    background-color: #66b2ff;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background-color: #444;
    color: white;
    transition: background-color 0.3s ease, transform 0.2s;
  }

  .btn-secondary:hover {
    background-color: #666;
    transform: translateY(-2px);
  }

  .btn:focus {
    outline: none;
    box-shadow: 0 0 5px rgba(128, 189, 255, 0.5);
  }
</style>
